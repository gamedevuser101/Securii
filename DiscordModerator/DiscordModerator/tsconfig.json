{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext", 
    "moduleResolution": "Node",
    "strict": true, 
    "jsx": "react", 
    "allowJs": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true, 
    "allowImportingTsExtensions": true, 
    "isolatedModules": true,
    "outDir": "./dist" 
  },
  "include": [
    "client/src/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
