{
  "compilerOptions": {
    "baseUrl": ".", // Base directory for resolving non-relative modules
    "paths": {
      "@/*": ["client/src/*"]  // Map '@' to the 'client/src' folder
    },
    "jsx": "react",
    "moduleResolution": "node",  // Node-style resolution
    "esModuleInterop": true  // Ensure interop with non-ES modules
  },
  "include": [
    "client/src/**/*.ts",  // Include all TypeScript files in the src directory
    "client/src/**/*.tsx"  // Include all TypeScript JSX files in the src directory
  ],
  "exclude": [
    "node_modules",  // Exclude node_modules
    "dist"  // Exclude dist folder if it exists
  ]
}
