{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "discordmoderator/client/src/**/*.ts",
    "discordmoderator/client/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
